{
  "name": "hugo-github-action",
  "description": "GitHub Action for Hugo, the world's fastest framework for building websites",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "cleanup-paths": "removeNPMAbsolutePaths ./ --force --fields _where _args",
    "pre-checkin": "npm run format && npm run cleanup-paths && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-hugo.git"
  },
  "keywords": [
    "actions",
    "hugo",
    "build",
    "package",
    "website"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/tool-cache": "^1.3.4",
    "download": "^8.0.0",
    "typed-rest-client": "^1.7.3"
  },
  "devDependencies": {
    "@types/download": "^6.2.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@zeit/ncc": "^0.22.1",
    "jest": "^25.5.4",
    "jest-circus": "^25.5.4",
    "jest-runtime": "^25.5.4",
    "prettier": "^2.0.5",
    "removeNPMAbsolutePaths": "^2.0.0",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3",
    "typescript-formatter": "^7.2.2"
  }
}